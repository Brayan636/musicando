<%- include header.ejs -%>
<h1>Editar Cancion</h1>
<form action="/canciones/editar <%= cancion.id %>" method="PUT"> 
    <div>
        <label for=""> Cancion </label>
        <input type="text" name="titulo" value = "<%=cancion.titulo%> ">
    </div>
    <div>  <label for=""> Album </label>
        <input type="text" name="album" value = "<%=cancion.album%> ">
    </div>
    <div>  <label for=""> Artista </label>
        <input type="text" name="artista" value = "<%=cancion.artista%> ">
    </div>
    <div>  <label for=""> Duracion </label>
        <input type="text" name="duracion" value = "<%=cancion.duracion%> ">
    </div>
    <div>  <label for=""> Genero  </label>
        <select name="Genero">
           <% for (let i = 0; i < generos.length; i++) { %>
            <% if (generos[i].id == cancion.genero_id ){ %>
                <option value = "<%=generos [i].id %>" selected>
                    <%=generos [i].name %>
                </option>
           <% } else { %>
            <option value = "<%=generos [i].id %>">
                <%=generos [i].name %>
            </option>
            }
            <option value = "<%=generos [i].id %>">
                <%=generos [i].name %>
            </option>
            <% } %>
        </select>
    </div>
    <button type="submit"> Crear </button>
    </div>
</form>
